# Server Port
PORT=5000

# MongoDB Connection URI (Replace with your actual credentials in local/private .env)
MONGO_URL=mongodb+srv://<your_username>:<your_password>@<your_cluster>.mongodb.net/?retryWrites=true&w=majority&appName=<your_app_name>

# JWT Secret Key (Use a strong, unique key in your actual .env)
JWT_SECRET_KEY=your_jwt_secret_key_here

# Stripe API Secret Key (Replace with your actual secret key in local/private .env)
STRIPE_SECRET_KEY=your_stripe_secret_key_here

# Client-Side URL
CLIENT_SITE_URL=http://localhost:5173
